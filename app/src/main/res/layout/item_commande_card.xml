<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/largeur_element_ten">

    <LinearLayout
        android:id="@+id/commande_container"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center_horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/title_commande_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/largeur_element_ten"
                android:gravity="center_horizontal"
                android:textSize="@dimen/text_size_18sp"/>
            <ImageView
                android:id="@+id/menu_commande_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:padding="@dimen/largeur_element_ten"
                android:src="@drawable/ic_menu_more"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackground"

                />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            style="@style/CustomHorizontalLine" />

        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/largeur_element_five"
            android:scrollbars="none"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:id="@+id/layout_order_items"
                android:clickable="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

        </HorizontalScrollView>

        <TextView
            android:layout_width="match_parent"
            style="@style/CustomHorizontalLine" />
        <TextView
            android:id="@+id/statut_commande_textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/largeur_element_ten"
            android:gravity="center_horizontal"
            android:textSize="@dimen/text_size_18sp"/>


    </LinearLayout>

</android.support.v7.widget.CardView>