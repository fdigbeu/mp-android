<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    android:background="@color/colorGrayLight"
    tools:context=".View.Activities.SplashActivity">

    <ImageView
        android:id="@+id/imageFemme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/femme"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/lb_empty"
        android:scaleType="fitCenter"/>

    <ImageView
        android:id="@+id/imageHomme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/homme"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/lb_empty"
        android:scaleType="fitCenter"/>

    <ImageView
        android:id="@+id/imageEnfant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/enfant"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/lb_empty"
        android:scaleType="fitCenter"/>

    <ImageView
        android:id="@+id/imageExotique"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/exotique"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/lb_empty"
        android:scaleType="fitCenter"/>

    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/logo"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/lb_empty"
        android:scaleType="fitCenter"/>

    <TextView
        android:id="@+id/messageSplash"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPink"
        android:background="@drawable/message_erreur_radius"
        android:textSize="@dimen/text_size_20sp"
        android:visibility="gone"
        android:padding="@dimen/largeur_element_ten"
        android:layout_margin="@dimen/largeur_element_ten"
        android:text="@string/lb_splash_message_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>