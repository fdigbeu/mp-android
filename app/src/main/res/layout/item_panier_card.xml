<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:id="@+id/panier_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/largeur_element_ten">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/panier_produit_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:layout_gravity="center_vertical"
                android:contentDescription="@string/lb_empty" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/panier_produit_title_textview"
                    android:textColor="@color/colorGrayDark"
                    android:textSize="18sp"
                    android:layout_gravity="left" />

                <EditText
                    android:id="@+id/panier_produit_qte_textview"
                    android:layout_width="@dimen/dimen_edittext_width"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorGrayDark"
                    android:inputType="number"
                    android:textSize="18sp"
                    android:gravity="left" />

                <TextView
                    android:id="@+id/panier_produit_prix_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/colorGrayDark"
                    android:layout_gravity="left" />


            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/delete_produit_imageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_cancel_activity"
            android:foreground="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:contentDescription="@string/lb_empty" />

    </RelativeLayout>


</android.support.v7.widget.CardView>
