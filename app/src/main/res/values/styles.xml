<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Vertical line style -->
    <style name="CustomVerticalLine" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:layout_width">0.2dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorGrayLight</item>
    </style>

    <!-- Horizontal line style -->
    <style name="CustomHorizontalLine" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.2dp</item>
        <item name="android:background">@color/colorGrayGreen</item>
    </style>

    <!-- Popup Menu Style -->
    <style name="CustomPopupMenu" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:background">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>
    <!-- //END -->

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
